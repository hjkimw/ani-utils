{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "allowJs": true,
    "lib": ["DOM","DOM.Iterable","ESNext"],
    "strict": true,
    "strictNullChecks":true,
    "noImplicitAny":true,
    "removeComments": true,
    "moduleDetection": "force",    
    "moduleResolution":"node",
    "outDir":"dist",
    "paths": {
      "@ts/*": ["./ts/*"],      
    }
  },
  "ts-node": {
    "esm":true
  },
  "exclude": ["node_modules","**/*.d.ts"],
  "include": ["ts/**/*.ts"]
}